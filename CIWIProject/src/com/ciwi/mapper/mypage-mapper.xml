<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ciwi.mapper.mypage-mapper">
<!-- 나의정보:session의 아이디가져오기-->
	<select id="myinformation" resultType="MemberVO" parameterType="String">
		select * from member
		where id=#{id}  
	</select>	
	<!-- 캐시충전 -->
	<update id="cashchargeUpdate" parameterType="MemberVO">
		update set member 
		mempay=mempay+#{mempay}
		where id=#{id}
	</update>
</mapper>